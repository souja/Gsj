<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">





    <com.wangxiaobao.gsj.view.TitleBar
        android:id="@+id/title_bar"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        app:waiter_title="手机点餐广告配置"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/order_commercials_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:background="#f3dca6"
        android:gravity="center"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:text="未设置"
        android:layout_below="@+id/title_bar"
        android:textColor="@color/white"
        android:textSize="14sp" />



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/bg_wap"
        android:orientation="vertical"
        android:layout_marginLeft="90dp"
        android:layout_marginRight="90dp"
        android:paddingLeft="9dp"
        android:layout_above="@+id/bottom_bar"
        android:layout_centerInParent="true"
        android:src="@drawable/bg_wap"
        android:layout_marginBottom="20dp"
        android:layout_below="@+id/order_commercials_status"
        android:layout_marginTop="50dp"
        android:paddingRight="9dp">

        <ImageView
            android:id="@+id/order_commercial_pic"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="44dp"
            android:scaleType="fitXY"
           />

    </LinearLayout>




    <LinearLayout
        android:id="@+id/bottom_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp">

        <TextView
            android:id="@+id/default_config"
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/drawable_rec_oval_green_10"
            android:gravity="center"
            android:text="恢复默认"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/set_order_commercials"
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="13dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/drawable_rec_oval_green_10"
            android:gravity="center"
            android:text="去设置"
            android:textColor="@color/white"
            android:textSize="14sp" />


    </LinearLayout>


</RelativeLayout>