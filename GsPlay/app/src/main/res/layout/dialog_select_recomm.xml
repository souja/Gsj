<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="430dp"
    android:background="@color/white"
    android:orientation="vertical">

    <com.wangxiaobao.gsj.view.HorizontalListView
        android:id="@+id/lv_select_recom_title"
        android:layout_marginLeft="@dimen/activity_vertical_margin"
        android:layout_width="match_parent"
        android:layout_height="@dimen/lv_item_height" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divider_color" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/lv_item_height"
        android:paddingLeft="@dimen/activity_vertical_margin"
        android:textColor="@color/pinkish_grey"
        android:textSize="12sp"
        android:gravity="center_vertical"
        android:text="请在以下列表选择一个菜品到推荐" />

    <ListView
        android:layout_marginLeft="@dimen/activity_vertical_margin"
        android:layout_marginRight="@dimen/activity_vertical_margin"
        android:id="@+id/lv_select_recomm"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:divider="@null"
        android:listSelector="#00000000" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/lv_item_height"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="@dimen/lv_item_height"
        android:paddingLeft="@dimen/activity_vertical_margin"
        android:paddingRight="@dimen/activity_vertical_margin">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/tv_select_food_recom_cancel"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@drawable/drawable_border_grey"
            android:text="取消"
            android:textSize="16sp" />

        <TextView
            android:layout_width="0dp"
            android:background="@drawable/drawable_radius_red_bg"
            android:id="@+id/tv_select_food_recom_confirm"
            android:text="确定"
            android:layout_height="match_parent"
            android:textColor="@color/white"
            android:layout_marginLeft="@dimen/activity_vertical_margin"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="16sp" />
    </LinearLayout>
</LinearLayout>