<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/iv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:background="@drawable/icon_splash_bg_chunxi_road"
        android:scaleType="fitXY" />

    <FrameLayout
        android:id="@+id/fl_container"
        android:layout_width="match_parent"
        android:layout_height="150px"
        android:layout_marginLeft="78px"
        android:layout_marginRight="78px"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="240px"
        android:background="@drawable/icon_splash_chuanxi_road_button_bg">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="欢迎使用成都市消费市场智能服务平台"
            android:textColor="@color/white"
            android:textSize="42px" />
    </FrameLayout>

</FrameLayout>