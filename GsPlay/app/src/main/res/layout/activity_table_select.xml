<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.wangxiaobao.gsj.view.TitleBar
            android:id="@+id/title_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:waiter_title="选择桌号" />


        <TextView
            android:id="@+id/selected_table_count"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/primary_grey"
            android:gravity="center_vertical"
            android:textColor="#888888"
            android:paddingLeft="10dp"
            android:text="@string/selected_table_count" />

        <com.wefika.flowlayout.FlowLayout
            android:id="@+id/selected_table_list_view"
            android:layout_width="match_parent"
            android:paddingBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_height="wrap_content" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:background="@color/primary_grey"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/all_table_info_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:textColor="#888888"
                android:text="@string/all_table_info" />

            <TextView
                android:id="@+id/select_all"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:padding="10dp"
                android:textColor="@color/primary_color"
                android:text="全部选择" />
        </RelativeLayout>

        <com.wefika.flowlayout.FlowLayout
            android:id="@+id/all_table_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/gv_edit_cook_style"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp" />


    </LinearLayout>
</ScrollView>