<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="16dp"
    android:paddingTop="16dp"
    android:minHeight="50dp">


    <ImageView
        android:id="@+id/type_indicator"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="28dp"
        android:src="@drawable/pic_category_standard_style" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="22dp"
        android:layout_toLeftOf="@+id/edit_category"
        android:layout_toRightOf="@+id/type_indicator"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/category_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:text="分类xxxxxxxxxxxxxxxxxx"
                android:maxEms="6"
                android:ellipsize="end"
                android:textColor="@color/black"
                android:layout_toLeftOf="@+id/sort_indicator"
                android:textSize="16sp" />


            <TextView
                android:id="@+id/sort_indicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:background="#ff8508"
                android:paddingBottom="2dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingTop="2dp"
                android:text="热销榜统计"
                android:layout_alignParentRight="true"
                android:textColor="@color/white"
                android:textSize="12sp" />

        </RelativeLayout>

        <TextView
            android:id="@id/category_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="xxxxxxxxxxxxxxxxxxxxxx"
            android:textColor="@color/pinkish_grey"
            android:textSize="14sp" />

    </LinearLayout>


    <ImageView
        android:id="@+id/edit_category"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:paddingLeft="17dp"
        android:paddingRight="24dp"
        android:src="@drawable/ic_pencil" />


</RelativeLayout>