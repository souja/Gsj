<?xml version="1.0" encoding="utf-8"?>
<com.wangxiaobao.gsj.view.RoundLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:roundtextview_background="@color/white">

    <TextView
        style="?attr/textAppearanceSearchResultTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:text="添加规格"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:paddingRight="10dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:gravity="right"
            android:textColor="@color/black"
            android:textSize="14dp"
            android:text="名称：" />

        <com.wangxiaobao.gsj.view.tag.EmojiFilterEditor
            android:id="@+id/garnish_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="8"
            android:hint="请输入规格名称"
            android:maxLength="8"
            android:textColorHint="@color/pinkish_grey" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:paddingLeft="20dp"
        android:paddingRight="10dp">


        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:gravity="right"
            android:textColor="@color/black"
            android:textSize="14dp"
            android:text="售价：" />

        <com.wangxiaobao.gsj.view.PriceEditor
            android:id="@+id/garnish_price"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="8"
            android:digits="0123456789."
            android:hint="请输入规格售价"
            android:inputType="numberDecimal"
            android:maxLength="8"
            android:textColorHint="@color/pinkish_grey" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:paddingLeft="20dp"
        android:paddingRight="10dp">


        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:gravity="right"
            android:textColor="@color/black"
            android:textSize="14dp"
            android:text="会员价：" />

        <com.wangxiaobao.gsj.view.PriceEditor
            android:id="@+id/spec_vip_price"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="8"
            android:digits="0123456789."
            android:hint="请输入规格会员价"
            android:inputType="numberDecimal"
            android:maxLength="8"
            android:textColorHint="@color/pinkish_grey" />
    </LinearLayout>

</com.wangxiaobao.gsj.view.RoundLinearLayout>