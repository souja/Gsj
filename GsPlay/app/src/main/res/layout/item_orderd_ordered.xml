<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="3"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/lv_item_height"
            android:id="@+id/tv_order_dishname"
            android:gravity="center_vertical"
            android:text="水煮牛肉"
            android:textColor="@color/black_three"
            android:textSize="@dimen/table_status_selected" />

        <TextView
            android:id="@+id/tv_addfood_setmeal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_marginTop="3dp"
            android:text="超级烤肉＋牛肉＋可乐"
            android:textColor="@color/warm_grey"
            android:textSize="@dimen/title_tv_size" />

        <TextView
            android:id="@+id/tv_addfood_remark"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:text="大份  烤肉3-7分熟"
            android:textColor="@color/warm_grey"
            android:textSize="@dimen/title_tv_size" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_height="match_parent"
            android:id="@+id/tv_order_price"
            android:gravity="center_vertical|right"
            android:text="¥48"
            android:textColor="@color/tomato_two"
            android:textSize="@dimen/lv_item_food_money" />

        <TextView
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:id="@+id/tv_order_amount"
            android:paddingRight="@dimen/activity_vertical_margin"
            android:layout_height="match_parent"
            android:gravity="center_vertical|right"
            android:text="x1"
            android:textColor="@color/black_three"
            android:textSize="@dimen/table_status_selected" />
    </RelativeLayout>
</LinearLayout>