<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/lv_item_height"
        android:background="@drawable/drawable_bottom_split_grey">

        <TextView
            android:id="@+id/tv_specific_cancel"
            android:layout_width="0dp"
            android:layout_height="@dimen/lv_item_height"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/activity_vertical_margin"
            android:text="取消"
            android:textColor="@color/pinkish_grey"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tv_specific_confirm"
            android:layout_width="0dp"
            android:layout_height="@dimen/lv_item_height"
            android:layout_weight="1"
            android:gravity="center_vertical|right"
            android:paddingRight="@dimen/activity_vertical_margin"
            android:text="完成"
            android:textColor="@color/tomato_two"
            android:textSize="13sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/lv_item_height"
        android:background="@drawable/drawable_bottom_split_grey">

        <EditText
            android:id="@+id/et_addfood_add_specific_name"
            android:layout_width="0dp"
            android:layout_height="@dimen/lv_item_height"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="规格名"
            android:paddingLeft="@dimen/activity_vertical_margin"
            android:singleLine="true"
            android:text=""
            android:textColor="@color/black_two"
            android:textSize="13sp" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/divider_color" />

        <LinearLayout
            android:layout_width="0dp"
            android:orientation="horizontal"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <EditText
                android:id="@+id/et_addfood_add_specific_price"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="@dimen/lv_item_height"
                android:layout_alignParentLeft="true"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="规格价格"
                android:inputType="numberDecimal"
                android:paddingLeft="@dimen/activity_vertical_margin"
                android:singleLine="true"
                android:textColor="@color/black_two"
                android:textSize="13sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/activity_vertical_margin"
                android:gravity="center"
                android:text="¥"
                android:textColor="@color/brownish_grey" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>