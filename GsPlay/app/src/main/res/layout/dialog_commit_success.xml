<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/view_bg"
        android:layout_width="0dp"
        android:layout_height="300px"
        android:background="@drawable/dialog_loading_bg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_success"
        android:layout_width="120px"
        android:layout_height="120px"
        android:layout_marginLeft="280px"
        android:src="@drawable/icon_commit_success"
        app:layout_constraintBottom_toBottomOf="@id/view_bg"
        app:layout_constraintLeft_toLeftOf="@id/view_bg"
        app:layout_constraintTop_toTopOf="@id/view_bg" />

    <TextView
        android:id="@+id/tv_success"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="42px"
        android:text="提交成功"
        android:textColor="@color/commit_comment_color"
        android:textSize="51px"
        app:layout_constraintLeft_toRightOf="@id/iv_success"
        app:layout_constraintTop_toTopOf="@id/iv_success" />

    <TextView
        android:id="@+id/tv_count_down"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="9px"
        android:text="@string/str_count_down"
        android:textColor="#7d7d7d"
        android:textSize="32px"
        app:layout_constraintLeft_toLeftOf="@id/tv_success"
        app:layout_constraintTop_toBottomOf="@id/tv_success" />
</android.support.constraint.ConstraintLayout>