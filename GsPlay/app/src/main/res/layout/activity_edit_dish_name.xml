<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/split_grey_two"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        android:paddingLeft="12dp"
        android:background="@color/white">

        <TextView
            android:id="@+id/cancel"
            android:layout_width="44dp"
            android:layout_height="match_parent"
            android:scaleType="center"
            android:text="取消"
            android:gravity="center_vertical"
            android:textSize="16sp"
            />

        <TextView
            android:id="@+id/actionbar_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="菜品名称"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/sure"
            android:layout_width="44dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:text="@string/sure"
            android:textColor="#36c573"
            android:textSize="16sp" />
    </RelativeLayout>





    <RelativeLayout
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:layout_height="wrap_content">


    <com.wangxiaobao.gsj.view.tag.EmojiFilterEditor
        android:id="@+id/dish_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/button_height"
        android:hint="请输入菜品名称,50字以内"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:layout_toLeftOf="@+id/unit"
        android:maxLength="50"
        android:background="@null"
        />


        <TextView
            android:id="@+id/unit"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:minWidth="@dimen/button_width"
            android:drawableRight="@drawable/solid_arrow_down"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:text="份"
            android:background="@color/white"
            android:visibility="gone"
            android:layout_height="@dimen/button_height" />

    </RelativeLayout>




</LinearLayout>